<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Titre de la liste des contacts -->
    <TextView
        android:id="@+id/tvContactListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voir_contacts"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Message affiché si aucun contact n'est enregistré -->
    <TextView
        android:id="@+id/tvNoContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aucun_contact"
        android:textSize="18sp"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp" />

    <!-- Liste des contacts -->
    <ListView
        android:id="@+id/contactListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
